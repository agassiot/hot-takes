<div class="row">
  <div class="col-auto">
    <h2>Edit Blog Post</h2>
  </div>
</div>

<div class="row mb-4 project">
  <div class="col-md-12">
    

    <form class="form edit-form" method="post">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" value="{{post.title}}" />
      </div>
      
      <div class="form-group">
        <label for="post-body">Body:</label>
        <textarea class="form-input" id="post-body" name="post-body"> {{post.body}}</textarea>
      </div>
      <div class="form-group">
        <input type="hidden" id="author" value="{{post.author}}"/>
        <input type="hidden" id="post-id" value="{{post.id}}"/>
        <button type="submit" class="btn btn-info" id="edit-butt">Edit</button>
      </div>
    </form>

    
  </div>
</div>

<script src="/js/edit.js"></script>
{{#each posts as |post| }}
<div class="row mb-4 w-100 project justify-center align-center">
  <div class="col-md-12 justify-center w-100">
    <h2>
     
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
     <p>by {{post.author}} on {{ sliceDate post.makeStamp}}</p>
    
    <p>{{{ post.body}}}<a href="/post/{{post.id}}">...</a></p>
  </div>
 
</div>
{{/each}}


<div class="row mb-4 project">
  <div class="col-md-4">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>
   
    <p>{{post.author}} on {{sliceDate post.makeStamp}}</p>
  </div>
  <div class="col-md-8">
  
    <p>{{{post.body}}}</p>
    <div id="comments-container">
      {{for}}
    </div>
      {{#each post.comments as |comment|}}
        <div style="background-color:#999; border: solid 1px #222;" class="mt-2 mb-1">
          <span style="text-decoration:underline;">by {{comment.author}} {{sliceDate comment.makeStamp}}</span>
          <p>{{{comment.body}}} </p>
            {{#if ../is_post_author}}
            <form class="delete-comment-form">
              <input type="hidden" id="post-id" value="{{../post.id}}" />
              <button class="btn btn-sm btn-info del-butt" data-id="{{comment.id}}" id="del-butt">DELETE COMMENT</button>
              </form>
            {{/if}}
          
        </div>
      {{/each}}
     
      {{#if logged_in}}
          <form class="form new-comment-form">
            <div class="form-group">
              <label for="comment-meta">by {{user_name}}</label>
            </div>
            <div class="form-group">
              <label for="comment-body">Comment:</label>
              <input type="hidden" id="post-id" value="{{post.id}}" />
              <textarea class="form-input" id="comment-body" name="comment-body"></textarea>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-info">Comment</button>
            </div>
          </form>
        <script src="/js/comment.js"></script>
      {{else}}
        <a href="/login">login to comment</a>  
      {{/if}}
  </div>
</div>